<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="false"
    android:padding="5dip">

    <TextView
        android:id="@+id/source"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#dfd"
        android:typeface="sans"
        android:clickable="false" />

    <TextView
        android:id="@+id/translation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/source"
        android:layout_marginTop="5dip"
        android:textColor="#ddffff"
        android:textSize="16sp"
        android:clickable="false" />

    <TextView
        android:id="@+id/example"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/translation"
        android:textColor="#ffddff"
        android:textSize="16sp"
        android:clickable="false" />

    <TextView
        android:id="@+id/refarab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/example"
        android:textColor="#ffcc80"
        android:textSize="16sp"
        android:clickable="false" />

    <View
        android:id="@+id/hor_space"
        android:layout_below="@id/refarab"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <View
        android:layout_below="@id/hor_space"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#888" />

</RelativeLayout>