<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.profeda.dictionary.WordDetail"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="Word" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvWDTitle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40dp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:id="@+id/tlWordDetail">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trPhon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvPhon"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvPhonText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trDefinition" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvDefinition"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvDefinitionText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"
                        android:onClick="clickInverseSearch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trExample" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvExample"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvExampleText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:autoText="true"
                        android:layout_margin="2dp"
                        android:onClick="clickSearch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trSynonym">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvSynonym"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="#aaa"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvSynonymText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"
                        android:onClick="clickSearch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trAntonym">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvAntonym"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="#aaa"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvAntonymText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"
                        android:onClick="clickSearch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trCross" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvCross"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvCrossText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"
                        android:onClick="clickSearch" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trUsage" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvUsage"
                        android:textColor="@android:color/white"
                        android:layout_column="0"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="This is a large overflowing text"
                        android:id="@+id/tvUsageText"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textColor="@android:color/white"
                        android:layout_margin="2dp"
                        android:onClick="clickSearch" />
                </TableRow>

            </TableLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
