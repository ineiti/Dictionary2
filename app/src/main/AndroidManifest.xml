<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.profeda.dictionary" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dictionary2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Translate"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WordDetail"
            android:label="@string/title_activity_word_detail"
            android:parentActivityName=".Translate" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.profeda.dictionary.Translate" />
        </activity>
    </application>

</manifest>
